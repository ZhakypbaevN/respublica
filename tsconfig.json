{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/directives/collapse.js", "src/directives/loading.js", "src/main.js", "src/vite-env.d.js", "src/helpers/formatPhone.js", "src/helpers/formatPhoneNumber.js", "src/helpers/checkGender.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
